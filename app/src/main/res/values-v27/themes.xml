<resources>

  <style name="Base.V27.BottomSheetDialogTheme.Light" parent="Base.V21.BottomSheetDialogTheme">
    <item name="android:navigationBarColor">@color/background_light</item>
    <item name="android:windowLightNavigationBar">true</item>
  </style>

  <style name="Base.V27.BottomSheetDialogTheme.Dark" parent="Base.V21.BottomSheetDialogTheme">
    <item name="android:navigationBarColor">@color/background_dark</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>

  <style name="BottomSheetDialogTheme.Light" parent="Base.V27.BottomSheetDialogTheme.Light">
    <item name="bottomSheetStyle">@style/BottomSheet.Light</item>
  </style>

  <style name="BottomSheetDialogTheme.Dark" parent="Base.V27.BottomSheetDialogTheme.Dark">
    <item name="bottomSheetStyle">@style/BottomSheet.Dark</item>
  </style>

  <style name="AppTheme.Light" parent="Base.V0.AppTheme.Light">
    <item name="android:windowLightNavigationBar">true</item>
    <item name="android:navigationBarColor">@color/background_light</item>
    <item name="android:navigationBarDividerColor">@color/list_divider_light</item>
  </style>

  <style name="AppTheme.Dark" parent="Base.V0.AppTheme.Dark">
    <item name="android:windowLightNavigationBar">false</item>
    <item name="android:navigationBarColor">@color/background_dark</item>
    <item name="android:navigationBarDividerColor">@color/list_divider_dark</item>
  </style>

  <style name="AppTheme.Dark.Black" parent="AppTheme.Dark">
    <item name="android:windowBackground">@color/black</item>
    <item name="primaryBackgroundColor">@color/black</item>
    <item name="secondaryBackgroundColor">@color/black</item>
    <item name="android:navigationBarColor">@color/black</item>
  </style>

</resources>
