<resources>

  <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogStyle</item>
  </style>

  <style name="AppTheme" parent="BaseTheme">
    <!-- start own colors -->
    <item name="primaryTextColor">@color/textColorPrimary</item>
    <item name="secondaryTextColor">@color/textColorSecondary</item>
    <item name="bottomDialogTextColor">@color/bottom_dialog_text_light</item>
    <item name="primaryBackgroundColor">@color/background</item>
    <item name="secondaryBackgroundColor">@color/background_gray</item>
    <item name="amCardBackgroundColor">@color/card_background_light</item>
    <item name="iconTintColor">@color/icon_tint_light</item>
    <item name="listDividerColor">@color/list_divider_light</item>
    <!-- end -->
    <item name="android:windowBackground">@color/background</item>
  </style>

  <style name="AppTheme.Dark" parent="BaseTheme">
    <!-- start own colors -->
    <item name="primaryTextColor">@color/white</item>
    <item name="secondaryTextColor">@color/textColorSecondary</item>
    <item name="bottomDialogTextColor">@color/bottom_dialog_text_dark</item>
    <item name="primaryBackgroundColor">@color/background_dark</item>
    <item name="secondaryBackgroundColor">@color/background_dark</item>
    <item name="amCardBackgroundColor">@color/card_background_dark</item>
    <item name="iconTintColor">@color/icon_tint_dark</item>
    <item name="listDividerColor">@color/list_divider_dark</item>
    <!-- end -->
    <item name="android:windowBackground">@color/background_dark</item>
  </style>

  <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:windowCloseOnTouchOutside">false</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
  </style>

  <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="behavior_peekHeight">512dp</item>
  </style>

  <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="colorAccent">@android:color/white</item>
  </style>

  <style name="TranslucentTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation</item>
  </style>

  <style name="BottomDialogTextStyle" parent="TextAppearance.AppCompat">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">?attr/bottomDialogTextColor</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/background_bottom_dialog</item>
  </style>

  <style name="Base.V0.BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="Base.V0.BottomSheetDialogTheme" />

  <style name="TooltipTextAppearance">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">normal</item>
  </style>

</resources>
