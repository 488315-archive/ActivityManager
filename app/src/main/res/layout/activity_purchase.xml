<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background_gray"
  android:orientation="vertical"
  tools:context=".intent.history.HistoryActivity"
  tools:ignore="ContentDescription">

  <include layout="@layout/toolbar" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:padding="8dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:id="@+id/purchase_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        tools:visibility="visible">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="8dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/textView8"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/pro_version_title"
              android:textSize="20sp" />

            <TextView
              android:id="@+id/price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/red"
              tools:text="54.99 UAH" />

          </LinearLayout>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pro_version_ads"
            android:textAppearance="?android:textAppearanceMedium" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pro_version_shortcut"
            android:textAppearance="?android:textAppearanceMedium" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pro_version_extras"
            android:textAppearance="?android:textAppearanceMedium" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pro_version_history"
            android:textAppearance="?android:textAppearanceMedium" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pro_version_root"
            android:textAppearance="?android:textAppearanceMedium" />

          <Button
            android:id="@+id/get_pro"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/pro_version_get"
            android:textColor="@color/blue" />

          <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pro_version_donate"
            android:textStyle="italic" />

        </LinearLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/donate_5_usd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:drawableLeft="@drawable/ic_star_border"
          android:drawablePadding="8dp"
          android:drawableStart="@drawable/ic_star_border"
          android:padding="16dp"
          android:text="@string/donate_5"
          android:textSize="18sp" />

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/donate_10_usd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:drawableLeft="@drawable/ic_star_half"
          android:drawablePadding="8dp"
          android:drawableStart="@drawable/ic_star_half"
          android:padding="16dp"
          android:text="@string/donate_10"
          android:textSize="18sp" />

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/donate_20_usd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:drawableLeft="@drawable/ic_star"
          android:drawablePadding="8dp"
          android:drawableStart="@drawable/ic_star"
          android:padding="16dp"
          android:text="@string/donate_20"
          android:textSize="18sp" />

      </android.support.v7.widget.CardView>

      <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    </LinearLayout>

  </ScrollView>

</LinearLayout>
