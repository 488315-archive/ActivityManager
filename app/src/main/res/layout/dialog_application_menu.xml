<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/application_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:maxLines="1"
    android:paddingStart="50dp"
    android:paddingLeft="50dp"
    android:paddingTop="12dp"
    android:paddingEnd="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="12dp"
    android:textColor="@color/blue"
    android:textSize="14sp"
    android:textStyle="bold"
    tools:text="Application name" />

  <LinearLayout
    android:id="@+id/action_open_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_launch" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_open" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/action_open_app_manifest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_receipt" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_open_manifest" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/action_open_app_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_info_outline" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_open_info" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/action_open_app_play_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_google_play" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_launch" />

  </LinearLayout>

</LinearLayout>