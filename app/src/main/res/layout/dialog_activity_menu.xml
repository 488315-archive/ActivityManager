<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/activity_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:maxLines="1"
    android:paddingStart="50dp"
    android:paddingLeft="50dp"
    android:paddingTop="16dp"
    android:paddingEnd="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="16dp"
    android:textColor="@color/blue"
    android:textSize="14sp"
    android:textStyle="bold"
    tools:text="Application name" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/list_divider" />

  <LinearLayout
    android:id="@+id/action_activity_add_shortcut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_label" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_shortcut" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/action_activity_launch_with_params"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_settings_gray" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_launch_params" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/action_activity_launch_with_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_verified_user" />

    <TextView
      style="@style/BottomDialogTextStyle"
      android:text="@string/context_action_launch_root" />
  </LinearLayout>
</LinearLayout>
