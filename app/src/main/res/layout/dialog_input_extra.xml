<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="12dp"
  android:orientation="vertical">

  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
      android:id="@+id/keyLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <EditText
        android:id="@+id/keyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_key"
        android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/valueLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp">

      <EditText
        android:id="@+id/valueView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_value"
        android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <RadioGroup
      android:id="@+id/radio_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp">

      <RadioButton
        android:id="@+id/rb_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_string" />

      <RadioButton
        android:id="@+id/rb_int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_int" />

      <RadioButton
        android:id="@+id/rb_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_long" />

      <RadioButton
        android:id="@+id/rb_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_float" />

      <RadioButton
        android:id="@+id/rb_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_double" />

      <RadioButton
        android:id="@+id/rb_boolean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_boolean" />

    </RadioGroup>

    <CheckBox
      android:id="@+id/array"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/type_array"
      android:visibility="gone" />

  </LinearLayout>

</ScrollView>
